# Yarn
alias ya='yarn add'
alias yad='yarn add -D'
alias yr='yarn remove'
alias yga='yarn global add'
alias yarr=yarn

alias zshrc='vim ~/.zshrc'

update() {
    sudo apt update
    apt list --upgradable
    sudo apt upgrade
    sudo apt autoremove
    vim +PlugUpgrade +PlugUpdate +PlugClean +qall
    antigen update
    ~/.tmux/plugins/tpm/bin/update_plugins all
}

mkcd () {
  mkdir "$1"
  cd "$1"
}
