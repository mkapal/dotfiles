alias ~='cd ~'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'
alias l='ls -A1'
alias la='ls -lAh'
ls --color=auto &> /dev/null && alias ls='ls --color=auto'
alias path='echo "$PATH" | tr ":" "\n"'

# Git
alias ga='git add'
alias gaa='git add -a'
alias gc='git commit -m'
alias gb='git checkout -b'
alias gf='git fetch'
alias gpl='git pull'
alias gp='git push'
alias gpf='git push --force'
alias gs='tig status'
alias grh='git reset HEAD~'

